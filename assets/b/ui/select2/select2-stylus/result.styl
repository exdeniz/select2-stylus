.select2-results
    max-height 200px
    padding 0 0 0 4px
    margin 4px 4px 4px 0
    position relative
    overflow-x hidden
    overflow-y auto
    tap-highlight-color rgba(0, 0, 0, 0)
    font-family  select2ResultFont
    font-size select2ResultFontSize
    html[dir="rtl"]
        padding 0 4px 0 0
        margin 4px 0 4px 4px

    ul
        &.select2-result-sub
            margin 0
            padding-left 0
    li
        list-style none
        display list-item
        background-image none
        &.select2-result-with-children
            & > .select2-result-label
                font-weight bold
    .select2-result-label
        padding 3px 7px 4px
        margin 0
        cursor pointer
        min-height 1em
        touch-callout none
        user-select none

    .select2-highlighted
        background select2ResultHighlightedBackgroundColor
        color select2ResultHighlightedColor
        em
            background transparent
        ul
            background select2ResultHighlightedBackgroundColor
            color #000
            li
                em
                    background #feffde
                    font-style normal
    .select2-no-results,
    .select2-searching,
    .select2-selection-limit
        background #f4f4f4
        display list-item
        padding-left 5px


